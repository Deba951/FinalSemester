<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#000000" /> <!-- Shadow color -->
            <corners android:radius="40dp" /> <!-- Corner radius -->
        </shape>
    </item>
    <!-- Background -->
    <item
        android:bottom="4dp"
        android:left="4dp"
        android:right="4dp"
        android:top="4dp">
        <shape android:shape="rectangle">
            <solid android:color="#E6F6FD" /> <!-- Background color -->
            <corners android:radius="40dp" /> <!-- Corner radius -->
        </shape>
    </item>
</layer-list>

